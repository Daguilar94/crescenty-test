<div class="card text-center col-xs-12 col-md-6 offset-md-3 my-5 p-0">
  <div class="card-header">
    New Transaction
  </div>
  <div class="card-body px-5">

    <%=form_for @transaction do |f|%>

    <div class="field">
      <%= f.label :account_id %><br />
      <%= f.collection_select(:account_id, Account.all, :id, :number) %>
    </div>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :date, autofocus: true, autocomplete: "Date", class:'form-control' %>
      <span class="error-message"><%=@transaction.errors[:date][0] if !@transaction.errors[:date].empty?%></span>
    </div>

    <div class="field">
      <%= f.label :detail %><br />
      <%= f.text_field :detail, autofocus: true, autocomplete: "Detail", class:'form-control' %>
      <span class="error-message"><%=@transaction.errors[:detail][0] if !@transaction.errors[:detail].empty?%></span>
    </div>

    <div class="field">
      <%= f.label :amount %><br />
      <%= f.number_field :amount, autofocus: true, autocomplete: "Amount", class:'form-control' %>
      <span class="error-message"> <%=@transaction.errors[:amount][0] if !@transaction.errors[:amount].empty?%></span>
    </div>

    <div>
      <%= f.submit class: "btn btn-primary" %>
    </div>

    <% end %>

  </div>
</div>
