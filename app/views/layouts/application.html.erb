<!DOCTYPE html>
<html>
<head>
  <title>CrescentyTest2</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'Crescenty', root_path, class:'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <% if admin_signed_in? %>
        <li>
          <%= link_to destroy_admin_session_path, method: 'delete' do%>
          <button type="button" class="btn btn-default navbar-btn">Sign out</button>
          <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Users', users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Account', accounts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Transactions', transactions_path ,class: "nav-link" %>
        </li>
        <% else %>
        <li>
          <%= link_to new_admin_session_path do %>
          <button type="button" class="btn btn-default navbar-btn">Sign in</button>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <% if notice != nil %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <%= alert %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <%= yield %>
</body>
</html>
